<h1>Create New Property</h1>

<% if logged_in? %>
<h2>You are logged in as <%= @user.name %><br></h2>
<%else%>
<h2>You are currently not logged in</h2><br>
<%end%>

<%=@warning if @warning%>

<form action="/property" method="POST">
	<label>Property Name: </label>
	<input type="text" name="property_name"><br>
	<label>Property Address: </label>
	<input type="text" name="property_address"><br>
	<label>Property Info: </label>
	<input type="text" name="property_info"><br>
	<label>Property Price: RM </label>
	<input type="text" name="property_price"><br><br>
	<input type="submit" value="SUBMIT">
</form>

<a href="/properties"><button>See all properties</button></a>