<h2>My Property Listings</h2>

<% @property.each_with_index do |property, index| %>
  <a href="/property/<%= property.id %>">
    <p><%= "#{index + 1})  #{property.property_name}, Location: #{property.property_address}, Price:RM#{property.property_price}, Posted by: #{property.user.name}" %></p>
  </a>
	<% end %>


<% if logged_in? %>

	<a href="/property/new"><button>Create new Property</button></a>
		<br>
		<br>
	<a href="/users/<%= @user.id %>"><button>View My Profile</button></a>
		<br>
		<br>
	<a href="/users/<%= @user.id %>/edit"><button>Edit My Profile</button></a>
		<br>
		<br>
	<a href="/users/logout"><button>LOGOUT</button></a>
	<a href="/"><button>HOME</button></a>

<%else%>

	<h2>For existing users Login</h2>
		<a href="/login"><button>Login</button></a>
		<br>
		<br>
	<h2>For new users Sign Up</h2>
		<a href="/users/new"><button>Sign Up</button></a>
		<br>
		<br>
	<a href="/"><button>HOME</button></a>

<%end%>
